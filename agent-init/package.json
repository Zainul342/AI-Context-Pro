{
  "name": "@zainul342/acp",
  "displayName": "AI Context Pro: Agent Init",
  "description": "Standardize your AI coding environment by automatically initializing agent rules, workflows, and skills.",
  "version": "1.0.0",
  "publisher": "Zainul342",
  "license": "MIT",
  "icon": "resources/icon.png",
  "repository": {
    "type": "git",
    "url": "https://github.com/Zainul342/AI-Context-Pro"
  },
  "author": {
    "name": "Zainul Mutaqin",
    "email": "zain@mutaqin.id"
  },
  "keywords": [
    "ai",
    "agent",
    "cursor",
    "standards",
    "initialization",
    "context",
    "productivity",
    "automated"
  ],
  "engines": {
    "vscode": "^1.109.0"
  },
  "categories": [
    "Programming Languages",
    "Other",
    "Linters"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./dist/extension.js",
  "bin": {
    "acp": "./dist/cli/index.js"
  },
  "contributes": {
    "commands": [
      {
        "command": "agentInit.initialize",
        "title": "Agent Init: Initialize Standards"
      },
      {
        "command": "agentInit.checkStatus",
        "title": "Agent Init: Check Status"
      },
      {
        "command": "agentInit.repair",
        "title": "Agent Init: Repair Standards"
      }
    ],
    "configuration": {
      "title": "Agent Init",
      "properties": {
        "agentInit.autoInit": {
          "type": "boolean",
          "default": false,
          "description": "Automatically initialize AI standards without confirmation."
        },
        "agentInit.checkOnStartup": {
          "type": "boolean",
          "default": true,
          "description": "Check for standards validation when a workspace is opened."
        },
        "agentInit.watchForDrift": {
          "type": "boolean",
          "default": false,
          "description": "Monitor .agent files for changes."
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js",
    "release": "node ./scripts/release.js"
  },
  "devDependencies": {
    "@types/glob": "^8.1.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "^20.19.33",
    "@types/sinon": "^21.0.0",
    "@types/vscode": "^1.109.0",
    "@typescript-eslint/eslint-plugin": "^5.59.8",
    "@typescript-eslint/parser": "^5.59.8",
    "@vscode/test-electron": "^2.3.2",
    "assert": "^2.1.0",
    "eslint": "^8.41.0",
    "glob": "^8.1.0",
    "mocha": "^10.2.0",
    "path-browserify": "^1.0.1",
    "process": "^0.11.10",
    "sinon": "^21.0.1",
    "ts-loader": "^9.4.3",
    "typescript": "^5.1.3",
    "webpack": "^5.85.0",
    "webpack-cli": "^5.1.1"
  }
}